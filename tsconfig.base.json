{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "/",
    "paths": {
      "@react-components": [
        "packages/react/components/src/index.ts"
      ],
      "@shared-libs": [
        "packages/shared/libs/src/index.ts"
      ],
      "@shared-utils": [
        "packages/shared/utils/src/index.ts"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "compilerOptions": {
      "module": "esnext"
    },
    "swc": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}