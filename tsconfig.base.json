{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@guy-romelle-magayano/portfolio/app/*": [
        "./apps/portfolio/src/app/*"
      ],
      "@guy-romelle-magayano/portfolio/components/*": [
        "./apps/portfolio/src/components/*"
      ],
      "@guy-romelle-magayano/portfolio/configs/*": [
        "./apps/portfolio/src/configs/*"
      ],
      "@guy-romelle-magayano/portfolio/styles/*": [
        "./apps/portfolio/src/styles/*"
      ],
      "@guy-romelle-magayano/portfolio/types/*": [
        "./apps/portfolio/src/types/*"
      ],
      "@guy-romelle-magayano/portfolio/utils/*": [
        "./apps/portfolio/src/utils/*"
      ],
      "@guy-romelle-magayano/react-components": [
        "packages/react/components/src/index.ts"
      ],
      "@guy-romelle-magayano/react-hooks": [
        "packages/react/hooks/src/index.ts"
      ],
      "@guy-romelle-magayano/react-libs": [
        "packages/react/libs/src/index.ts"
      ],
      "@guy-romelle-magayano/react-utils": [
        "packages/react/utils/src/index.ts"
      ],
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    },
    "swc": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}