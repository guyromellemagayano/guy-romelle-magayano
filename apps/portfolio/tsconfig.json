{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/portfolio/.next/types/**/*.ts",
    "../../dist/apps/portfolio/.next/types/**/*.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
