{
  "name": "portfolio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/portfolio",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/portfolio",
        "postcssConfig": "apps/portfolio/postcss.config.js",
        "outputFileName": "apps/portfolio/next.config.mjs"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/portfolio",
          "debug": true,
          "profile": true
        },
        "production": {
          "generateLockfile": true
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "portfolio:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "portfolio:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "portfolio:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "portfolio:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/portfolio/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/portfolio/**/*.ts?(x)"
        ],
        "fix": true
      }
    }
  }
}