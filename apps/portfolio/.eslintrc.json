{
  "extends": [
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "!**/*",
    ".next/**/*"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)"
      ],
      "extends": [
        "plugin:@nx/react-typescript",
        "next",
        "next/core-web-vitals"
      ],
      "rules": {
        "@next/next/no-html-link-for-pages": "off"
      }
    },
    {
      "files": [
        "**/__tests__/**/*.ts?(x)",
        "**/?(*.)+(spec|test).ts?(x)"
      ],
      "extends": [
        "plugin:testing-library/react"
      ],
      "env": {
        "jest": true
      }
    },
    {
      "files": [
        "**/*.md?(x)"
      ],
      "rules": {}
    }
  ]
}