{
  "extends": [
    "../../.eslintrc.json",
    "plugin:@next/next/recommended",
    "next/typescript",
    "next/core-web-vitals"
  ],
  "ignorePatterns": [
    "!**/*",
    ".next/**/*"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)"
      ],
      "extends": [
        "plugin:@tanstack/eslint-plugin-query/recommended"
      ],
      "rules": {
        "@tanstack/query/exhaustive-deps": "off"
      }
    },
    {
      "files": [
        "**/*.mdx"
      ],
      "rules": {}
    }
  ]
}