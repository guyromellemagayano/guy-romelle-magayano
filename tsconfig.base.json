{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/app/*": [
        "apps/portfolio/src/app/*"
      ],
      "@portfolio/components": [
        "apps/portfolio/src/components/index.ts"
      ],
      "@portfolio/configs": [
        "apps/portfolio/src/configs/index.ts"
      ],
      "@portfolio/styles/*": [
        "apps/portfolio/src/styles/*"
      ],
      "@portfolio/types": [
        "apps/portfolio/src/types/index.ts"
      ],
      "@portfolio/utils": [
        "apps/portfolio/src/utils/index.ts"
      ],
      "@react-components": [
        "packages/react/components/src/index.ts"
      ],
      "@react-hooks": [
        "packages/react/hooks/src/index.ts"
      ],
      "@react-libs": [
        "packages/react/libs/src/index.ts"
      ],
      "@react-utils": [
        "packages/react/utils/src/index.ts"
      ],
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    },
    "swc": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}