{
  "extends": [
    "../../../.eslintrc.json"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "extends": [
        "plugin:@nx/react-typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "**/__tests__/*.ts",
        "**/__tests__/*.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "extends": [
        "plugin:testing-library/react"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}