{
  "extends": [
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "!**/*",
    ".next/**/*"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "extends": [
        "plugin:@nx/react-typescript",
        "next",
        "next/core-web-vitals"
      ],
      "rules": {
        "@next/next/no-html-link-for-pages": "off"
      }
    },
    {
      "files": [
        "**/__tests__/*.ts",
        "**/__tests__/*.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "extends": [
        "plugin:testing-library/react"
      ],
      "env": {
        "jest": true
      }
    },
    {
      "files": [
        "**/*.mdx"
      ],
      "rules": {}
    }
  ]
}